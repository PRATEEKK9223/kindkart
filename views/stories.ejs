<% layout('layouts/main') -%>

<h2>Impact Stories</h2>

<div class="row">
  <% stories.forEach(s => { %>
    <div class="col-md-6 mb-3">
      <div class="card">
        <div class="card-body">
          <h5><%= s.title %></h5>
          <p><%= s.content %></p>
          <small class="text-muted">NGO: <%= s.ngo ? s.ngo.name : 'Unknown' %></small>
          <div class="mt-2">
            <a href="/ngos?category=" class="btn btn-sm btn-outline-primary">Donate to Similar Cause</a>
          </div>
        </div>
      </div>
    </div>
  <% }) %>
</div>
